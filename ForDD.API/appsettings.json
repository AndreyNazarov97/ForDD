{
  "RabbitMqSettings": {
    "QueueName": "queue",
    "RoutingKey": "ForDD.topic",
    "ExchangeName": "ForDD.exchange"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "../ForDD.API/logs/log.txt",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  },
  "ConnectionStrings": {
    "PostgreSQL": "Server=localhost;Port=5433;Database=ForDD;User Id=postgres;Password=postgres"
  },
  "Jwt": {
    "Issuer": "ForDD",
    "Audience": "ForDD",
    "Authority": "ForDD",
    "JwtKey": "VDdYF0TsFr2zAIMuNAzEgIDxaEXuO7bm",
    "LifeTime": 15,
    "RefreshTokenValidityInDays": 7
  },
  "AllowedHosts": "*"
}
